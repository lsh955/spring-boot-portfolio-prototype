<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.springboot.portfolio.mapper.UserMapper"> <!-- namespace mapper들을 구분하는 식별자 -->

    <resultMap id="User" type="com.springboot.portfolio.dto.User">
        <result property="id" column="user_id"/>
        <result property="userType" column="user_type"/>
        <result property="loginId" column="login_id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="userTel" column="user_tel"/>
        <result property="userEmail" column="user_email"/>
        <result property="userFirstDate" column="user_firstdate"/>
    </resultMap>

    <select id="findUserByLoginId" resultMap="User">SELECT user_id, user_type, login_id, user_name, password, user_tel,
        user_email, user_firstdate FROM user
        <where>
            <if test=" loginId != null and loginId != '' ">AND login_id = #{loginId}</if>
        </where>
    </select>

    <insert id="setUserInfo" parameterType="com.springboot.portfolio.dto.User" useGeneratedKeys="true"
            keyProperty="param.id"> INSERT INTO user (user_type, login_id, user_name, password, user_tel, user_email, user_firstdate)
                                    VALUES (#{param.userType}, #{param.loginId}, #{param.userName},
                                            #{param.password}, #{param.userTel}, #{param.userEmail}, now()) </insert>

</mapper>